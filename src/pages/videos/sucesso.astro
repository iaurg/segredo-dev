<script>
  // Countdown timer and redirect
  let timeLeft = 5;
  const countdownElement = document.getElementById('countdown');
  
  const timer = setInterval(() => {
    timeLeft--;
    
    if (countdownElement) {
      countdownElement.textContent = timeLeft.toString();
    }
    
    if (timeLeft <= 0) {
      clearInterval(timer);
      window.location.href = '/videos/materiais/';
    }
  }, 1000);
</script> 